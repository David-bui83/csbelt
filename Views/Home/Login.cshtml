@model LoginUser
<form asp-action="Login"  asp-controller="Home" method="POST">
  <span class="text-danger" asp-validation-for="LoginUserName"></span>
  <div class="form-group">
    <label asp-for="LoginUserName">User name</label>
    <input asp-for="LoginUserName" type="UserName" class="form-control" id="LoginUserName" placeholder="Enter Username">
  </div>
  <span class="text-danger" asp-validation-for="LoginPassword"></span>
  <div class="form-group">
    <label asp-for="LoginPassword">Password</label>
    <input asp-for="LoginPassword" type="password" class="form-control" id="LoginPassword" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-dark">Login</button>
</form>