@model User
<form asp-action="Register" asp-controller="Home" method="POST">
  <span class="text-danger" asp-validation-for="FirstName"></span>
  <div class="form-group">
    <label asp-for="FirstName">First name</label>
    <input asp-for="FirstName" type="text" class="form-control" id="FirstName" placeholder="Enter first name">
  </div>
  <span class="text-danger" asp-validation-for="LastName"></span>
  <div class="form-group">
    <label asp-for="LastName">Last name</label>
    <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Enter last name">
  </div>
  <span class="text-danger" asp-validation-for="UserName"></span>
  <div class="form-group">
    <label asp-for="UserName">Username</label>
    <input asp-for="UserName" type="UserName" class="form-control" id="UserName" placeholder="Enter UserName">
  </div>
  <span class="text-danger" asp-validation-for="Password"></span>
  <div class="form-group">
    <label asp-for="Password">Password</label>
    <input asp-for="Password" type="password" class="form-control" id="Password" placeholder="Password">
  </div>
  <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
  <div class="form-group">
    <label asp-for="ConfirmPassword">Confirm Password</label>
    <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-dark">Sign up Now</button>
</form>